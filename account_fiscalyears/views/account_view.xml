<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Journal Items -->
        <record id="view_move_line_form" model="ir.ui.view">
            <field name="name">account.move.line.fiscalyear.inherit.form</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_id']" position="after">
                    <field name="period_id" options="{'no_create': True, 'no_open': True}" groups="fiscalyears.group_fiscalyear_user" readonly="1"/>
                </xpath>
            </field>
        </record>
        <record id="view_move_line_pivot" model="ir.ui.view">
            <field name="name">account.move.line.fiscalyear.inherit.pivot</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_pivot" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="period_id" groups="fiscalyears.group_fiscalyear_user" readonly="1"/>
                </xpath>
            </field>
        </record>
        <record id="view_move_line_tree" model="ir.ui.view">
            <field name="name">account.move.line.fiscalyear.inherit.tree</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="period_id" groups="fiscalyears.group_fiscalyear_user" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record id="account_move_line_graph_date" model="ir.ui.view">
            <field name="name">account.move.line.fiscalyear.inherit.graph</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.account_move_line_graph_date" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="period_id" groups="fiscalyears.group_fiscalyear_user" readonly="1"/>
                </xpath>
            </field>
        </record>
        <record id="account_move_line_graph_date_cash_basis" model="ir.ui.view">
            <field name="name">account.move.line.fiscalyear.inherit.graph</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.account_move_line_graph_date_cash_basis" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="period_id" groups="fiscalyears.group_fiscalyear_user" readonly="1"/>
                </xpath>
            </field>
        </record>
        <record id="view_account_move_line_filter" model="ir.ui.view">
            <field name="name">Journal Items fiscalyear inherit</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_account_move_line_filter" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="period_id" options="{'no_create': True, 'no_open': True}" groups="fiscalyears.group_fiscalyear_user" />
                    <filter name="current_period" string="Current Period" domain="[ ('period_id.start_date', '&lt;=', time.strftime('%%Y-%%m-%%d')), ('period_id.end_date', '&gt;=', time.strftime('%%Y-%%m-%%d'))]" help="invoices in the current fiscal year period" groups="fiscalyears.group_fiscalyear_user"/>

                </xpath>
                <xpath expr="//group" position="inside">
                    <filter name="group_by_period_id" string="Period" groups="fiscalyears.group_fiscalyear_user" context="{'group_by':'period_id'}"/>
                </xpath>
            </field>
        </record>

        <!-- Account.Entry Edition -->
        <record id="view_move_tree" model="ir.ui.view">
            <field name="name">account.move.fiscalyear.inherit.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="period_id" groups="fiscalyears.group_fiscalyear_user"/>
                </xpath>
            </field>
        </record>

        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.fiscalyear.inherit.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="period_id" options="{'no_create': True, 'no_open': True}" groups="fiscalyears.group_fiscalyear_user" domain="[('state','=','open'),('start_date','&lt;=',date),('end_date','&gt;=',date)]"/>
                </xpath>
            </field>
        </record>
        <record id="view_account_move_filter" model="ir.ui.view">
            <field name="name">account.move.fiscalyear.inherit.select</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_move_filter" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="period_id" options="{'no_create': True, 'no_open': True}" groups="fiscalyears.group_fiscalyear_user" />
                    <filter name="current_period" string="Current Period" domain="[ ('period_id.start_date', '&lt;=', time.strftime('%%Y-%%m-%%d')), ('period_id.end_date', '&gt;=', time.strftime('%%Y-%%m-%%d'))]" help="invoices in the current fiscal year period" groups="fiscalyears.group_fiscalyear_user"/>

                </xpath>
                <xpath expr="//group" position="inside">
                    <filter name="group_by_period_id" string="Period" groups="fiscalyears.group_fiscalyear_user" context="{'group_by':'period_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
