<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_picking_move_order_inherit" model="ir.ui.view">
            <field name="name">stock.picking.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="delivery_dated"/>
                    <field name="po_no"/>
                </xpath>
                <xpath expr="//field[@name='move_lines']/tree" position="attributes">
                    <attribute name="editable"/>
                </xpath>
                <xpath expr="//field[@name='move_lines']/tree//field[@name='product_id']" position="after">
                    <field name="desc"/>
                </xpath>
                <xpath expr="//field[@name='move_lines']/tree//field[@name='product_id']" position="before">
                    <field name="line_no"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
