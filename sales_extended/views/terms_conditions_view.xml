<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_terms_conditionstree_view" model="ir.ui.view">
            <field name="name">sale.terms.conditions.tree</field>
            <field name="model">sale.terms.conditions</field>
            <field name="arch" type="xml">
                <tree string="Terms&amp;Conditions">
                    <field name="name"/>
                    <field name="default_term"/>
                </tree>
            </field>
        </record>
        <record id="sale_terms_conditionsform_view" model="ir.ui.view">
            <field name="name">sale.terms.conditions.form</field>
            <field name="model">sale.terms.conditions</field>
            <field name="arch" type="xml">

                <form string="Terms&amp;Conditions">
                    <sheet>
                        <group string="Details">
                            <field name="name"/>
                            <field name="default_term"/>
                            <field name="desc"/>
                            <field name="arabic_desc"/>
                            <field name="include_bank_details"/>
                            <field name="bank_id" attrs="{'invisible':[('include_bank_details','=',False)],'required':[('include_bank_details','!=',False)]}"/>
                        </group>
                       <group string="List Of includes">
                            <div>price_value - To Include Price Dynamically From Sale order</div>
                            <div>term_value - To Include Payment Term Name Dynamically From Sale order</div>
                            <div>valid_value -  To Include Validity Dynamically From Sale order.</div>
                            <div>bank_value - To Include Bank Details from Template.</div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="sale_terms_conditionsfilter_view" model="ir.ui.view">
            <field name="name">sale.terms.conditions</field>
            <field name="model">sale.terms.conditions</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Terms&amp;Conditions">
                    <field name="name"/>
                    <field name="default_term"/>
                    <field name="desc"/>
                </search>
            </field>
        </record>

        <record id="sale_terms_conditionsaction" model="ir.actions.act_window">
            <field name="name">Terms&amp;Conditions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.terms.conditions</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Terms&amp;Conditions
                </p>
            </field>
        </record>
        <menuitem
                id="sale_terms_conditionsaction_menu"
                name="Terms&amp;Conditions"
                parent="sale.menu_sale_config"
                action="sale_terms_conditionsaction"
                groups="base.group_user"
                sequence="6"/>


    </data>
</odoo>
